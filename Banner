  <script>
    const slides = document.querySelectorAll('.background-slide');
    let current = 0;

    setInterval(() => {
      slides[current].classList.remove('active');
      current = (current + 1) % slides.length;
      slides[current].classList.add('active');
    }, 20000); // 20 segundos
  </script>
